<section class="section my-4">
    <div class="container text-center">
        <div class="title py-5">
            <h1>Upload Single or Multiple images</h1>
            <p class="subtitle">Upload images to server</p>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <form action="/uploadmultiple" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-8">
                        <input type="file" class="form-control" name="images" id="formFile" multiple>
                    </div>
                    <div class="col-2">
                        <input type="submit" class="btn btn-warning" value="Upload Image">
                    </div>
                </div>
                </form>
            </div>
        </div>

{{!-- Card --}}
    <section class="mt-5">
        <div class="row">
                {{#each images}}
                    {{#each this}}
                        {{#if imageBase64}}
                            <div class="col-3">
                                <div class="card shadow" style="width: 18rem;">
                                    
                                        <img src='data:{{contentType}};base64,{{imageBase64}}' class="card-img-top" class="img-fluid"  alt="...">
                                        <div class="card-body">
                                            <h3>{{images}}</h3>
                                            <h5 class="card-title">Node Developer</h5>
                                            <p class="card-text">Welcome to our official page, What do you want to complete tell us about it.</p>
                                            <a href="#" class="btn btn-primary">Read More</a>
                                        </div>
                                    
                                </div>
                            </div>
                        {{/if}}
                    {{/each}}  
                {{/each}}
  
        </div>

    </section>

    </div>
